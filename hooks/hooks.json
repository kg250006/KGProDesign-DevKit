{
  "description": "KGProDesign-DevKit hooks - includes Ralph Loop stop hook and SessionStart hook for session isolation",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/stop-hook.js\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/session-start-hook.js\""
          }
        ]
      }
    ]
  }
}
